{
  "compilerOptions": {
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "src",
    "jsx": "react",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "typingOptions": {
    "enableAutoDiscovery": true
  },
  "compileOnSave": true,
  "allowJS": true,
  "checkJs": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}